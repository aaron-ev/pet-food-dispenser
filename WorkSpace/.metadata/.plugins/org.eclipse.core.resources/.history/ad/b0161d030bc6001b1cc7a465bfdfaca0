#include "servo.h"

TIM_HandleTypeDef tim2PWM;

void servo_tim_Init(TIM_HandleTypeDef *htim)
{
	TIM_OC_InitTypeDef tim2_config;
	tim2PWM.Instance = TIM2;
	tim2PWM.Init.Prescaler = 0;


	if(HAL_TIM_PWM_Init(&tim2PWM) != HAL_OK)
	{
		servo_error_handler();
	}

}

